# Top-level config
root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.{md,markdown}]
trim_trailing_whitespace = false

# YAML Files
[*.{yml,yaml}]
trim_trailing_whitespace = false
insert_final_newline = false

# JSON-Files
[*.{json,jsonc}]
trim_trailing_whitespace = false

# Python
[*.py]
indent_style = space
indent_size = 4
