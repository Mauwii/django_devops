# Top-level config
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
tab_width = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.md]
indent_size = 4
indent_style = space

# JSON-Files
[*.{json,jsonc}]
trim_trailing_whitespace = true
insert_final_newline = false

# Python
[*.py]
indent_style = space
indent_size = 4
